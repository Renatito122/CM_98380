<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:focusable="false"
        android:inputType="none"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textAlignment="viewStart"
        android:textIsSelectable="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        android:importantForAutofill="no" />

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Delete"
        android:onClick="deleteNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_input_delete"
        app:tint="#E91E63" />

    <Button
        android:id="@+id/button_dial_1"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="135dp"
        android:backgroundTint="#1E1E1E"
        android:onClick="speedDial"
        android:stateListAnimator="@null"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/button_dial_2"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#1E1E1E"
        android:onClick="speedDial"
        android:stateListAnimator="@null"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_dial_1"
        app:layout_constraintEnd_toStartOf="@+id/button_dial_3"
        app:layout_constraintStart_toEndOf="@+id/button_dial_1"
        app:rippleColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/button_dial_3"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="#1E1E1E"
        android:onClick="speedDial"
        android:stateListAnimator="@null"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_dial_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="1"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="2"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_3"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="3"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="4"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_5"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="5"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_6"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="6"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_3"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="7"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_8"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@android:color/transparent"
        android:bottomLeftRadius="8dp"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="8"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_9"
        app:layout_constraintEnd_toStartOf="@+id/button_3"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="9"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_6"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_asterisk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addAsterisk"
        android:stateListAnimator="@null"
        android:text="*"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/transparent"
        android:bottomLeftRadius="8dp"
        android:onClick="addNumber"
        android:stateListAnimator="@null"
        android:text="0"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_8"
        app:rippleColor="@color/white" />

    <Button
        android:id="@+id/button_cardinal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:backgroundTint="@android:color/transparent"
        android:onClick="addCardinal"
        android:stateListAnimator="@null"
        android:text="#"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_9"
        app:rippleColor="@color/white" />

    <ImageButton
        android:id="@+id/button_call"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="call"
        android:onClick="callNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_0"
        app:srcCompat="@android:drawable/ic_menu_call"
        app:tint="#4CAF50"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>